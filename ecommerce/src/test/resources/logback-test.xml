<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 테스트 실행 속도 향상을 위한 최소 로깅 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 성능 테스트만 INFO 레벨로 출력 -->
    <logger name="io.hhplus.ecommerce.support.performance.IndexPerformanceComparisonTest" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- P6Spy 로그 비활성화 (테스트 속도 향상) -->
    <logger name="p6spy" level="OFF" />

    <!-- Spring 관련 로그 최소화 -->
    <logger name="org.springframework" level="WARN" />
    <logger name="org.hibernate" level="WARN" />
    <logger name="com.zaxxer.hikari" level="WARN" />
    <logger name="com.mysql.cj" level="WARN" />

    <!-- 애플리케이션 로그도 ERROR 레벨로 제한 -->
    <logger name="io.hhplus.ecommerce" level="ERROR" />

    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>